 <div class="row">
              <div class="col s0 m2 blue"></div>

              <div class="col s12 m8 z-depth-1" id='blogPosts'>
                {{#each blogPosts}}
               <a class="right" href="/blog/create?_id={{_id}}">Edit</a>
                <a class="section hoverable " href="blog/view/{{_id}}">
                    <h5>
                       {{title}}
                    </h5>
                    <span><b>Created on: </b> <i>{{createdAt}}</i></span>
                    <span> &nbsp; | <b>&nbsp;Edited on: </b><i>{{editedAt}}</i></span>
                    <div class="divider"></div><br>
                    <p class="blog-summary">
                       {{blogSummary}}
                    </p>   
                </a>
                {{/each}}
             </div>
             <div class="col s0 m2 blue"></div>

</div>
