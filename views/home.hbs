 <div class="row">
              <div class="col s2"></div>

              <div class="col s8 z-depth-1" id='blogPosts'>
                {{#each blogPosts}}
                <div class="section ">
                    <h4>
                       {{title}}
                    </h4>
                    <span><b>Created on: </b> <i>{{createdAt}}</i></span>
                    <span> &nbsp; | <b>&nbsp;Edited on: </b><i>{{editedAt}}</i></span>
                    <div class="divider"></div><br>
                    <p class="blog-summary ">
                       {{blogSummary}}<a href="/blog/{{id}}">Click to read more.</a>
                    </p>    
                </div>
                {{/each}}
              
              <div class="col s2"></div>
  </div>