<style>
    .preview{
        margin-top:20px;
    }
  #inputBody {
height: auto;
}
    .mainContent{

    font-family: 'Raleway', sans-serif;
}
h3{
    font-family:'Roboto';
}
</style>
<script>
$(document).ready(function(){
  $("#inputBody").on('input',function(){
    var html = $.parseHTML($('#inputBody').val())
    $('.preview').html(html)
  });
   $("#inputTitle").on('input',function(){
    var html = $.parseHTML($('#inputTitle').val())
    $('h3').html(html)
  });
   $("#inputBody").trigger( 'input' );
   $("#inputTitle").trigger('input')
});
</script>
 <link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.5.0/themes/prism.min.css"
/>
<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.5.0/prism.min.js"></script>

<div class="row">
    <div class="col s6">

      <form method="POST" action="/blog/post">
        Title Goes here
        <textarea name="title" id="inputTitle" cols="25" rows="20">{{blog.title}}</textarea>
        Body HTML  goes here<br>
        <textarea name="body" id="inputBody" cols="25" rows="20">{{blog.body}}</textarea>
        <input type="submit" value="Submit">
        {{#if blog._id}}
          <input type="text" id="ss" name="blogId" value="{{blog._id}}" hidden>
        {{/if}}
      </form>
    </div>
    <div class="col s6 blog container">
        <h3 class="center"></h3>
        <div class="container preview mainContent flow-text" >
            
        </div>
    </div>
</div>